<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Faculty</title>

    @{
        var test = Model;
    }
</head>
<body>

<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h5 class="my-0 mr-md-auto font-weight-normal">Faculty management system</h5>

    <nav class="my-2 my-md-0 mr-md-3">
        <div class="btn-group">
            @Html.ActionLink("Home", "Index", "Home", null, new {@class = "p-2 text-dark"})
        </div>
        <div class="btn-group">
            <button class="btn btn-secondary p-2 text-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color: white">
                Courses
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                @Html.ActionLink("List of courses", "List", "Course", null, new {@class = "p-2 text-dark dropdown-item"})
                @Html.ActionLink("Add", "List", "Course", null, new {@class = "p-2 text-dark dropdown-item"})
            </div>
        </div>
        <div class="btn-group">
            <button class="btn btn-secondary p-2 text-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color: white">
                Teachers
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                @Html.ActionLink("List of Teachers", "List", "Teacher", null, new {@class = "p-2 text-dark dropdown-item"})
                @Html.ActionLink("Add", "List", "Course", null, new {@class = "p-2 text-dark dropdown-item"})
            </div>
        </div>
        <div class="btn-group">
            <button class="btn btn-secondary p-2 text-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color: white">
                Themes
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                @Html.ActionLink("List of Themes", "List", "Theme", null, new {@class = "p-2 text-dark dropdown-item"})
                @Html.ActionLink("Add", "List", "Course", null, new {@class = "p-2 text-dark dropdown-item"})
            </div>
        </div>
        <div class="btn-group">
            @Html.ActionLink("Students", "List", "Student", null, new {@class = "p-2 text-dark"})
        </div>
    </nav>
    @Html.Partial("_LoginPartial")
</div>
<div class="shadow-sm">
    @RenderBody()
</div>
<footer class="text-muted">
    <div class="container">
        <p class="float-right">
            <a href="#">Back to top</a>
        </p>
        <p>Faculty system © Faculty</p>
    </div>
</footer>
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/Scripts/umd/popper.js")
@Scripts.Render("~/bundles/bootstrap")

@RenderSection("scripts", false)
</body>
</html>