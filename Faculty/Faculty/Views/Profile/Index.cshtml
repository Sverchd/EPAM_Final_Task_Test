@using System.Web.UI.WebControls
@model Faculty.Models.ProfileViewModel

@{
    ViewBag.Title = "Profile";
}
<h2 style="text-align: center">@ViewBag.Title</h2>
<div class="container-fluid">
    <div class="row ">
        <div class="col-lg-12">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a href="" data-target="#profile" data-toggle="tab" class="nav-link active">Profile</a>
                </li>
                @if (Model.role == "Student")
                {}
                    <li class="nav-item">
                        <a href="" data-target="#courses" data-toggle="tab" class="nav-link">Courses</a>
                    </li>
                


            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="profile">
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h4>About</h4>
                            <p> Email: @Model.Email </p>
                            <p>Role: @Model.role</p>

                        </div>


                    </div>
                    <!--/row-->
                </div>
            @if (Model.role == "Student")
            {}
                <div class="tab-pane" id="courses">

                    @{
                        ViewBag.CourseStatus = "Applied";
                        Model.Courses = Model.CoursesApplied;
                    }
                    @Html.Partial("CourseList", Model)
                    @{
                        ViewBag.CourseStatus = "In progress";
                        Model.Courses = Model.CoursesInProgress;
                    }

                    @Html.Partial("CourseList", Model)
                    @{
                        ViewBag.CourseStatus = "Finished";
                        Model.Courses = Model.CoursesFinished;
                    }
                    @Html.Partial("CourseList", Model)
                </div>
            
                </div>
        </div>

    </div>
</div>
<hr>



@{
    var s = ViewContext.RouteData.Values["action"].ToString();
}
@if (User.IsInRole("admin") && ViewContext.RouteData.Values["action"].ToString() == "List")
{
    <div class="row">
        @Html.ActionLink("Add new Course", "Add", "Course", null, new {role = "button", @class = "btn btn-primary btn-lg active", style = "margin-bottom: 10px"})
    </div>
}


<script type="text/javascript" src="~/Scripts/jquery-3.4.1.min.js"></script>
<script type="text/javascript" src="~/Scripts/data-table/datatables.js"></script>


<script>
    $(document).ready(function() {
        $.noConflict();
        var table = $('#CourseListTable').DataTable(
            {
                "paging": false,
                "searching": false,
                "info": false
            });
    });
</script>